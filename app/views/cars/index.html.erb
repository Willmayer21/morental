<h1>cars index</h1>

<div class="banner" style="background-color: #33475b;">
  <div class="container">
    <div class="container">
    <ul>
      <% @cars.each do |car| %>
        <li><%= image_tag car.poster_url, :width => "50%", :length => "50%" %><br><%= car.model %> <%= car.description %><br>Price : Rs <%= car.price_per_day %> year : <%= car.year %></li>
          <%= link_to "Book a vehicle", new_car_rental_path(car), class: "btn btn-primary"%>
      <% end %>
    </ul>
    </div>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>
