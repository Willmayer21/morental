<div class="" style="background-color: #33475b;">
    <%@car.each do |car| %>
  <div class="carshow">
    <div class="card-trip">
      <%= image_tag car.poster_url%>
      <div class="card-trip-infos">
        <div>
          <h2><%= car.model %></h2>
          <p><%= car.description %></p>
          <p>year : <%= car.year %></p>
        </div>
        <h2 class="card-trip-pricing">Price : Rs <%= car.price_per_day %></h2>
      </div>
    </div>
    <!--
  <div class="div">
    <div class="container-image">
      <%= image_tag car.poster_url, :width => "500px", :height => "300px" %>
      <p><%= car.model %> </p>
      <p><%= car.description %></p>
      <p>Price : Rs <%= car.price_per_day %> </p>
      <p>year : <%= car.year %></p>
    </div>
  </div>
  -->
  <div class="div2">
    <div class="row">
      <%= simple_form_for [car, @rental] do |f| %>
        <%= f.input :start_date, as: :date%>
        <%= f.input :end_date, as: :date%>
        <div class ="d-flex justify-content-between">
        <%= link_to "Cancel", root_path, class: "btn btn-flat"%>
        <%= f.submit 'submit', class: "btn btn-gradient"%>
        </div>
      <% end %>
    </div>
    <div class="list-group">
      <% @user_rentals.each do |rental| %>
        <div class="notification">
          <div class="notification-content">
            <p class="list-group-item"> User : <%= rental.user.email %>
            <br> Car booked from : <%= rental.start_date %> To : <%= rental.end_date %>
            <br> Amount to be paid : Rs <%= rental.total_price %></p>
          </div>

          <div class="notification-actions">
            <a href="#">update <i class="fas fa-pencil-alt"></i></a>
          </div>
        </div>
      <% end %>
    </div>
    <%# <%= link_to "Add a review", new_car_review_path(@car),  class: "btn btn-primary" %>
  </div>
  <% end %>
  </div>
  <div style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
